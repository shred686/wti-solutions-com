---
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<style>
  .service-tile {
    background: rgba(26, 26, 26, 0.05);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(85, 107, 47, 0.1);
    transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  
  .service-tile:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border-color: rgba(85, 107, 47, 0.3);
  }
  
  .service-icon {
    background: linear-gradient(135deg, #556b2f 0%, #6b7c3a 100%);
  }
</style>

<div class="service-tile rounded-xl p-8 h-full">
  <div class="service-icon w-16 h-16 rounded-lg flex items-center justify-center mb-6">
    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      {icon}
    </svg>
  </div>
  
  <h3 class="text-xl font-medium text-slate-800 mb-4">
    {title}
  </h3>
  
  <p class="text-slate-600 leading-relaxed">
    {description}
  </p>
</div> 