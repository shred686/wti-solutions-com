<script>
  import { SectionAnimator } from '../utils/animations.js';
  
  // Initialize animation when component loads
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section-type="contact"]');
    if (section) {
      const animator = new SectionAnimator();
      animator.initializeSection(section, 'contact');
    }
  });
</script> 