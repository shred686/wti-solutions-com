---
export interface Props {
  backgroundImage?: ImageMetadata;
  backgroundStyle?: string;
  id?: string;
}

const { backgroundImage, backgroundStyle, id } = Astro.props;
---

<style>
  .bg-gray-50, input, textarea, button, .w-8.h-8 {
    transition: opacity 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55), transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
</style>

<script>
  // Component uses ScrollAnimator from IntroSection
</script>

<section class="py-16 relative overflow-hidden" data-section-type="contact" id={id} style={backgroundStyle || 'background: white;'}>
  <!-- Background image -->
  {backgroundImage && (
    <img 
      src={backgroundImage.src}
      alt="Contact background"
      class="absolute inset-0 w-full h-full object-cover z-0"
    />
  )}
  
  <!-- Dark overlay for readability -->
  <div class="absolute inset-0 z-0 bg-white bg-opacity-60"></div>
  
  <!-- Contact Form Section -->
  <div class="flex-1 flex items-center justify-center relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <!-- Contact Info -->
        <div class="p-8 rounded-lg" style="background: rgba(26, 26, 26, 0.1); backdrop-filter: blur(4px); -webkit-backdrop-filter: blur(12px); border: 1px solid rgba(85, 107, 47, 0.3);">
          <h2 class="text-4xl md:text-5xl font-light text-[var(--dark-header-color)] mb-8">
            Get Started Today
          </h2>
          <p class="text-xl text-white mb-8 leading-relaxed">
            Ready to transform your data challenges into competitive advantages? Let's discuss how WTI Solutions can accelerate your mission.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[var(--dark-header-color)] mb-2">Location</h3>
                <p class="text-white">National Capital Region<br>Washington, DC Metro Area</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[var(--dark-header-color)] mb-2">Email</h3>
                <p class="text-white">info@wtisolutions.com</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[var(--dark-header-color)] mb-2">Phone</h3>
                <p class="text-white">(703) 555-0123</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="p-8 rounded-lg" style="background: rgba(26, 26, 26, 0.1); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); border: 1px solid rgba(85, 107, 47, 0.3);">
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-[var(--dark-header-color)] mb-2">Name</label>
              <input type="text" id="name" name="name" class="w-full px-4 py-3 border border-white rounded-lg focus:ring-2 focus:ring-white focus:border-transparent bg-white bg-opacity-20 text-[var(--dark-header-color)] placeholder-white" required>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-[var(--dark-header-color)] mb-2">Email</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-white rounded-lg focus:ring-2 focus:ring-white focus:border-transparent bg-white bg-opacity-20 text-[var(--dark-header-color)] placeholder-white" required>
            </div>
            
            <div>
              <label for="organization" class="block text-sm font-medium text-[var(--dark-header-color)] mb-2">Organization</label>
              <input type="text" id="organization" name="organization" class="w-full px-4 py-3 border border-white rounded-lg focus:ring-2 focus:ring-white focus:border-transparent bg-white bg-opacity-20 text-[var(--dark-header-color)] placeholder-white">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-[var(--dark-header-color)] mb-2">Message</label>
              <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 border border-white rounded-lg focus:ring-2 focus:ring-white focus:border-transparent bg-white bg-opacity-20 text-[var(--dark-header-color)] placeholder-white" placeholder="Tell us about your data challenges and how we can help..."></textarea>
            </div>
            
            <button type="submit" class="w-full bg-white text-gray-700 py-3 px-6 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-300">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section> 