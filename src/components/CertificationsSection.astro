        <h3 class="text-xl font-medium text-platinum-charcoal-900 mb-4">
          Quality Assurance
        </h3>
        <p class="text-platinum-charcoal-600 leading-relaxed">
          ISO standards and rigorous quality management processes ensuring excellence
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  import { SectionAnimator } from '../utils/animations.js';
  
  // Initialize animation when component loads
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section-type="certifications"]');
    if (section) {
      const animator = new SectionAnimator();
      animator.initializeSection(section, 'certifications');
    }
  });
</script> 