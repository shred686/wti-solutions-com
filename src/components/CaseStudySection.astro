---
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  imageLeft?: boolean;
  bgColor?: string;
}

const { title, subtitle, description, imageLeft = true, bgColor = "bg-plum-charcoal-50" } = Astro.props;
---

<section class={`full-page-section h-screen flex items-center justify-center ${bgColor} relative overflow-hidden`} data-section-type="case-study">
  <!-- Background image space - will be added later -->
  <div class="absolute inset-0 bg-gradient-to-r from-black/20 to-transparent z-0"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative z-10">
    <div class={`grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ${imageLeft ? '' : 'lg:grid-flow-col-dense'}`}>

      <!-- Content Side -->
      <div class={`${imageLeft ? 'lg:order-1' : 'lg:order-2'} space-y-6`}>
        <div class="text-sm font-medium text-plum-charcoal-600 uppercase tracking-wider">
          Case Study
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-plum-charcoal-900 leading-tight">
          {title}
        </h2>

        <h3 class="text-xl md:text-2xl text-plum-charcoal-600 font-light">
          {subtitle}
        </h3>

        <p class="text-lg text-plum-charcoal-600 leading-relaxed">
          {description}
        </p>

        <div class="pt-4">
          <a href="#contact" class="bg-plum-charcoal-800 text-white px-8 py-4 rounded-lg text-lg font-medium hover:bg-plum-charcoal-900 transition-all duration-300 transform hover:scale-105">
            Read case study
          </a>
        </div>
      </div>

      <!-- Image/Space Side -->
      <div class={`${imageLeft ? 'lg:order-2' : 'lg:order-1'} relative`}>
        <div class="w-full h-96 bg-gradient-to-br from-plum-charcoal-200 to-plum-charcoal-300 rounded-lg flex items-center justify-center">
          <div class="text-plum-charcoal-600 text-center">
            <svg class="w-24 h-24 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="text-sm">Case Study Image</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { SectionAnimator } from '../utils/animations.js';
  
  // Initialize animation when component loads
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section-type="case-study"]');
    if (section) {
      const animator = new SectionAnimator();
      animator.initializeSection(section, 'case-study');
    }
  });
</script> 