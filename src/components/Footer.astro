        </div>
      </div>
    </div>
  </div>
  
  <!-- Copyright Bar -->
  <div class="border-t border-charcoal-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="text-center text-gray-300 text-sm">
        © 2025 WTI. All rights reserved.
      </div>
    </div>
  </div>
</footer>

<script>
  import { SectionAnimator } from '../utils/animations.js';
  
  // Initialize animation when component loads
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section-type="footer"]');
    if (section) {
      const animator = new SectionAnimator();
      animator.initializeSection(section, 'footer');
    }
  });
</script> 