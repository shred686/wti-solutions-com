---
// Import all client logos
import usAirForce from '../assets/client-logos/us-air-force.png';
import disa from '../assets/client-logos/disa.png';
import usArmy from '../assets/client-logos/us-army.png';
import usAgencyGlobalMedia from '../assets/client-logos/us-agency-global-media.png';
import nrc from '../assets/client-logos/nrc.png';
import dhs from '../assets/client-logos/dhs.png';
import oni from '../assets/client-logos/oni.png';
import uspto from '../assets/client-logos/uspto.jpg';
import airForceFamilyAdvocacy from '../assets/client-logos/air-force-family-advocacy.jpg';
import departmentOfState from '../assets/client-logos/department-of-state.png';
import departmentOfCommerce from '../assets/client-logos/department-of-commerce.png';
import noaa from '../assets/client-logos/noaa.png';
import fema from '../assets/client-logos/fema.png';
import airForceMedicalSupport from '../assets/client-logos/air-force-medical-support.png';
import arlingtonVa from '../assets/client-logos/arlington-va.png';
import departmentOfLabor from '../assets/client-logos/department-of-labor.png';
import cdc from '../assets/client-logos/cdc.png';
import nyDoh from '../assets/client-logos/ny-doh.png';
import nps from '../assets/client-logos/nps.png';
import nationalParkService from '../assets/client-logos/national-park-service.png';

export interface Props {
  backgroundImage?: string;
  overlayColor?: string;
  overlayOpacity?: number;
  backgroundStyle?: string;
  id?: string;
}

const { backgroundImage, overlayColor = 'black', overlayOpacity = 50, backgroundStyle, id } = Astro.props;

// Convert percentage to decimal for CSS
const overlayOpacityDecimal = overlayOpacity / 100;

// Client logos data with imported images
const clientLogos = [
  { name: 'U.S. Air Force', logo: usAirForce.src },
  { name: 'Defense Information Systems Agency', logo: disa.src },
  { name: 'U.S. Army', logo: usArmy.src },
  { name: 'U.S. Agency for Global Media', logo: usAgencyGlobalMedia.src },
  { name: 'Nuclear Regulatory Commission', logo: nrc.src },
  { name: 'Department of Homeland Security', logo: dhs.src },
  { name: 'Office of Naval Intelligence', logo: oni.src },
  { name: 'U.S. Patent and Trademark Office', logo: uspto.src },
  { name: 'Air Force Family Advocacy Program', logo: airForceFamilyAdvocacy.src },
  { name: 'Department of State', logo: departmentOfState.src },
  { name: 'Department of Commerce', logo: departmentOfCommerce.src },
  { name: 'National Oceanic and Atmospheric Administration', logo: noaa.src },
  { name: 'Federal Emergency Management Agency', logo: fema.src },
  { name: 'Air Force Medical Support Agency', logo: airForceMedicalSupport.src },
  { name: 'Arlington, Virginia', logo: arlingtonVa.src },
  { name: 'Department of Labor', logo: departmentOfLabor.src },
  { name: 'Centers for Disease Control', logo: cdc.src },
  { name: 'New York Department of Health', logo: nyDoh.src },
  { name: 'National Park Service', logo: nps.src },
  { name: 'National Park Service', logo: nationalParkService.src }
];
---

<style>
  .h-36 {
    transition: opacity 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
</style>

<script>
  // Component uses ScrollAnimator from IntroSection
</script>

<section class={backgroundImage ? "h-screen relative overflow-hidden" : "py-16"} data-section-type="clients" id={id} style={backgroundImage ? `background-image: url(${backgroundImage}); background-size: cover; background-position: center; background-repeat: no-repeat;` : (backgroundStyle || 'background: white;')}>
  {backgroundImage && (
    <div 
      class="absolute inset-0 z-0" 
      style={`background-color: ${overlayColor === 'white' ? 'rgba(255, 255, 255, ' : 'rgba(0, 0, 0, '}${overlayOpacityDecimal});`}
    ></div>
  )}
  <div class={backgroundImage ? "relative z-10 w-full h-full flex items-center justify-center p-8" : "w-full px-4 sm:px-6 lg:px-8"}>
    {backgroundImage ? (
      <div class="w-full max-w-7xl backdrop-blur-sm bg-white/20 border border-white/30 shadow-xl rounded-2xl p-12">
        <div class="text-center mb-16 bg-[#1a1a1a] p-8 border border-[#2a2a2a]">
          <h2 class="text-5xl md:text-6xl font-light text-[#e5e5e5] mb-6">
            Sampling of Our Clients
          </h2>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2 items-center">
          {clientLogos.map((client) => (
            <div class="h-36 w-full flex items-center justify-center hover:scale-105 transition-all duration-300 group">
              <img 
                src={client.logo} 
                alt={client.name}
                class="w-full h-full object-contain transition-all duration-300"
                loading="lazy"
              />
            </div>
          ))}
        </div>
        <div class="text-center mt-16">
          <a href="#contact" class="bg-titanium-charcoal-800 text-white px-8 py-4 rounded-lg text-lg font-medium hover:bg-titanium-charcoal-900 transition-all duration-300 transform hover:scale-105">
            Become a Client
          </a>
        </div>
      </div>
    ) : (
      <div class="w-full max-w-7xl">
        <div class="text-center mb-16 bg-[#1a1a1a] p-8 border border-[#2a2a2a]">
          <h2 class="text-5xl md:text-6xl font-light text-[#e5e5e5] mb-6">
            Sampling of Our Clients
          </h2>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-2 items-center">
          {clientLogos.map((client) => (
            <div class="h-36 w-full flex items-center justify-center hover:scale-105 transition-all duration-300 group">
              <img 
                src={client.logo} 
                alt={client.name}
                class="w-full h-full object-contain transition-all duration-300"
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section> 