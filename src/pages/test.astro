import ServicesSection from '../components/ServicesSection.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Design Playground - Working Version</title>
		
		<!-- Google Fonts - Expanded Selection -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;700&family=Open+Sans:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&family=Lora:wght@400;500;600;700&family=Source+Sans+Pro:wght@300;400;600;700&family=Ubuntu:wght@300;400;500;700&family=Noto+Sans:wght@300;400;500;600;700&family=IBM+Plex+Sans:wght@300;400;500;600;700&family=Work+Sans:wght@300;400;500;600;700&family=DM+Sans:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@300;400;500;600;700&family=Libre+Baskerville:wght@400;700&family=Crimson+Text:wght@400;600;700&family=Source+Serif+Pro:wght@300;400;600;700&family=Josefin+Sans:wght@300;400;500;600;700&family=Quicksand:wght@300;400;500;600;700&family=Nunito:wght@300;400;500;600;700&family=Comfortaa:wght@300;400;500;600;700&family=Fredoka+One:wght@400&family=Bebas+Neue:wght@400&family=Oswald:wght@200;300;400;500;600;700&family=Anton:wght@400&family=Righteous:wght@400&family=Permanent+Marker:wght@400&display=swap" rel="stylesheet">
		
		<style>
			/* Professional Sans-Serif Fonts */
			.font-inter { font-family: 'Inter', sans-serif !important; }
			.font-roboto { font-family: 'Roboto', sans-serif !important; }
			.font-opensans { font-family: 'Open Sans', sans-serif !important; }
			.font-montserrat { font-family: 'Montserrat', sans-serif !important; }
			.font-poppins { font-family: 'Poppins', sans-serif !important; }
			.font-sourcesans { font-family: 'Source Sans Pro', sans-serif !important; }
			.font-ubuntu { font-family: 'Ubuntu', sans-serif !important; }
			.font-noto { font-family: 'Noto Sans', sans-serif !important; }
			.font-ibmplex { font-family: 'IBM Plex Sans', sans-serif !important; }
			.font-worksans { font-family: 'Work Sans', sans-serif !important; }
			.font-dmsans { font-family: 'DM Sans', sans-serif !important; }
			.font-outfit { font-family: 'Outfit', sans-serif !important; }
			.font-plusjakarta { font-family: 'Plus Jakarta Sans', sans-serif !important; }
			
			/* Modern & Fun Sans-Serif Fonts */
			.font-josefin { font-family: 'Josefin Sans', sans-serif !important; }
			.font-quicksand { font-family: 'Quicksand', sans-serif !important; }
			.font-nunito { font-family: 'Nunito', sans-serif !important; }
			.font-comfortaa { font-family: 'Comfortaa', cursive !important; }
			
			/* Bold & Impactful Fonts */
			.font-fredoka { font-family: 'Fredoka One', cursive !important; }
			.font-bebas { font-family: 'Bebas Neue', cursive !important; }
			.font-oswald { font-family: 'Oswald', sans-serif !important; }
			.font-anton { font-family: 'Anton', sans-serif !important; }
			.font-righteous { font-family: 'Righteous', cursive !important; }
			.font-marker { font-family: 'Permanent Marker', cursive !important; }
			
			/* Elegant Serif Fonts */
			.font-playfair { font-family: 'Playfair Display', serif !important; }
			.font-merriweather { font-family: 'Merriweather', serif !important; }
			.font-lora { font-family: 'Lora', serif !important; }
			.font-librebaskerville { font-family: 'Libre Baskerville', serif !important; }
			.font-crimson { font-family: 'Crimson Text', serif !important; }
			.font-sourceserif { font-family: 'Source Serif Pro', serif !important; }
			
			/* Simple color schemes */
			.scheme-1 { background-color: #1a1a1a; }
			.scheme-2 { background-color: #1e3a8a; }
			.scheme-3 { background-color: #581c87; }
			.scheme-4 { background-color: #065f46; }
			.scheme-5 { background-color: #92400e; }
			
			/* Make changes obvious */
			.test-header { font-size: 28px !important; margin-bottom: 20px !important; }
			.test-body { font-size: 18px !important; line-height: 1.6 !important; }
		</style>
	</head>
	<body class="bg-gray-900 text-white p-8">
		<div class="max-w-6xl mx-auto">
			<!-- Simple Controls -->
			<div class="bg-gray-800 p-6 rounded-lg mb-8">
				<h1 class="text-2xl font-bold mb-4">Design Playground - Simple Working Version</h1>
				
				<div class="flex flex-wrap gap-4 mb-4">
					<button id="color-btn" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded font-bold">
						Change Colors (Click Me!)
					</button>
					<button id="header-font-btn" class="px-4 py-2 bg-green-600 hover:bg-green-700 rounded font-bold">
						Change Header Fonts (Click Me!)
					</button>
					<button id="body-font-btn" class="px-4 py-2 bg-purple-600 hover:bg-purple-700 rounded font-bold">
						Change Body Fonts (Click Me!)
					</button>
				</div>
				
				<div class="text-sm text-gray-300">
					<span>Current Color: <span id="current-color" class="font-bold text-white">Dark Gray</span></span> | 
					<span>Header Font: <span id="current-header" class="font-bold text-white">Playfair Display</span></span> | 
					<span>Body Font: <span id="current-body" class="font-bold text-white">Inter</span></span>
				</div>
			</div>
			
			<!-- Test Sections -->
			<div id="test-sections">
				<!-- Section 1 -->
				<div class="scheme-1 p-6 rounded-lg mb-6">
					<h2 class="test-header font-playfair">Data Governance</h2>
					<p class="test-body font-inter">Comprehensive data governance solutions to ensure data quality, compliance, and security across your organization.</p>
				</div>
				
				<!-- Section 2 -->
				<div class="scheme-1 p-6 rounded-lg mb-6">
					<h2 class="test-header font-playfair">Data Modeling & Engineering</h2>
					<p class="test-body font-inter">Expert data modeling and engineering services to build robust, scalable data architectures.</p>
				</div>
				
				<!-- Section 3 -->
				<div class="scheme-1 p-6 rounded-lg mb-6">
					<h2 class="test-header font-playfair">Zero Trust</h2>
					<p class="test-body font-inter">Implement comprehensive zero trust security frameworks to protect your critical assets.</p>
				</div>
				
				<!-- Section 4 -->
				<div class="scheme-1 p-6 rounded-lg mb-6">
					<h2 class="test-header font-playfair">AI/ML Capabilities</h2>
					<p class="test-body font-inter">Advanced artificial intelligence and machine learning solutions to drive innovation.</p>
				</div>
				
				<!-- Section 5 -->
				<div class="scheme-1 p-6 rounded-lg mb-6">
					<h2 class="test-header font-playfair">Multi-Source Data Retrieval</h2>
					<p class="test-body font-inter">Efficient data retrieval and integration from multiple sources and systems.</p>
				</div>
			</div>
		</div>

		<script>
			// Simple, working variables
			let currentColor = 1;
			let currentHeaderFont = 1;
			let currentBodyFont = 0;
			
			const colors = ['scheme-1', 'scheme-2', 'scheme-3', 'scheme-4', 'scheme-5'];
			const colorNames = ['Dark Gray', 'Blue', 'Purple', 'Green', 'Orange'];
			
			// Expanded header fonts - mix of professional and creative
			const headerFonts = [
				'font-playfair', 'font-merriweather', 'font-lora', 'font-librebaskerville', 'font-crimson', 'font-sourceserif',
				'font-oswald', 'font-anton', 'font-bebas', 'font-fredoka', 'font-righteous', 'font-marker',
				'font-roboto', 'font-montserrat', 'font-poppins', 'font-ibmplex', 'font-worksans', 'font-dmsans'
			];
			const headerFontNames = [
				'Playfair Display', 'Merriweather', 'Lora', 'Libre Baskerville', 'Crimson Text', 'Source Serif Pro',
				'Oswald', 'Anton', 'Bebas Neue', 'Fredoka One', 'Righteous', 'Permanent Marker',
				'Roboto', 'Montserrat', 'Poppins', 'IBM Plex Sans', 'Work Sans', 'DM Sans'
			];
			
			// Expanded body fonts - professional and readable
			const bodyFonts = [
				'font-inter', 'font-opensans', 'font-roboto', 'font-montserrat', 'font-poppins', 'font-sourcesans',
				'font-ubuntu', 'font-noto', 'font-ibmplex', 'font-worksans', 'font-dmsans', 'font-outfit',
				'font-plusjakarta', 'font-josefin', 'font-quicksand', 'font-nunito', 'font-comfortaa'
			];
			const bodyFontNames = [
				'Inter', 'Open Sans', 'Roboto', 'Montserrat', 'Poppins', 'Source Sans Pro',
				'Ubuntu', 'Noto Sans', 'IBM Plex Sans', 'Work Sans', 'DM Sans', 'Outfit',
				'Plus Jakarta Sans', 'Josefin Sans', 'Quicksand', 'Nunito', 'Comfortaa'
			];
			
			// Color button
			document.getElementById('color-btn')?.addEventListener('click', function() {
				currentColor = (currentColor % 5);
				currentColor++;
				
				const sections = document.querySelectorAll('#test-sections > div');
				sections.forEach(section => {
					// Remove all color classes
					section.classList.remove('scheme-1', 'scheme-2', 'scheme-3', 'scheme-4', 'scheme-5');
					// Add new color class
					section.classList.add(colors[currentColor - 1]);
				});
				
				const colorElement = document.getElementById('current-color');
				if (colorElement) {
					colorElement.textContent = colorNames[currentColor - 1];
				}
				console.log('Color changed to:', colorNames[currentColor - 1]);
			});
			
			// Header font button
			document.getElementById('header-font-btn')?.addEventListener('click', function() {
				currentHeaderFont = (currentHeaderFont % headerFonts.length);
				currentHeaderFont++;
				
				const headers = document.querySelectorAll('.test-header');
				headers.forEach(header => {
					// Remove all font classes
					header.classList.remove('font-playfair', 'font-merriweather', 'font-lora', 'font-librebaskerville', 'font-crimson', 'font-sourceserif', 'font-oswald', 'font-anton', 'font-bebas', 'font-fredoka', 'font-righteous', 'font-marker', 'font-roboto', 'font-montserrat', 'font-poppins', 'font-ibmplex', 'font-worksans', 'font-dmsans');
					// Add new font class
					header.classList.add(headerFonts[currentHeaderFont - 1]);
				});
				
				const headerElement = document.getElementById('current-header');
				if (headerElement) {
					headerElement.textContent = headerFontNames[currentHeaderFont - 1];
				}
				console.log('Header font changed to:', headerFontNames[currentHeaderFont - 1]);
			});
			
			// Body font button
			document.getElementById('body-font-btn')?.addEventListener('click', function() {
				currentBodyFont = (currentBodyFont % bodyFonts.length);
				currentBodyFont++;
				
				const bodies = document.querySelectorAll('.test-body');
				bodies.forEach(body => {
					// Remove all font classes
					body.classList.remove('font-inter', 'font-opensans', 'font-roboto', 'font-montserrat', 'font-poppins', 'font-sourcesans', 'font-ubuntu', 'font-noto', 'font-ibmplex', 'font-worksans', 'font-dmsans', 'font-outfit', 'font-plusjakarta', 'font-josefin', 'font-quicksand', 'font-nunito', 'font-comfortaa');
					// Add new font class
					body.classList.add(bodyFonts[currentBodyFont - 1]);
				});
				
				const bodyElement = document.getElementById('current-body');
				if (bodyElement) {
					bodyElement.textContent = bodyFontNames[currentBodyFont - 1];
				}
				console.log('Body font changed to:', bodyFontNames[currentBodyFont - 1]);
			});
			
			console.log('Simple design playground loaded and ready!');
		</script>
	</body>
</html> 