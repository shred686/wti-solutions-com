<Layout title="Case Studies - WTI Solutions">
  <PageHeader title="Case Studies" subtitle="Real-world solutions delivering mission impact" />
  <Header />
  
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row">
        <!-- Vertical Tab Navigation (skinny left side) -->
        <div class="w-56 flex-shrink-0 bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm sticky top-24 h-fit">
          {caseStudies.map((caseStudy, index) => (
            <button
              class={`case-study-tab w-full h-20 text-left px-3 font-medium transition-all duration-300 border-b border-gray-100 last:border-b-0 text-sm flex items-center ${
                index === 0
                  ? 'bg-gray-800 text-white'
                  : 'bg-white text-gray-700 hover:bg-gray-50 hover:text-[#556b2f]'
              }`}
              data-case-study={caseStudy.id}
            >
              <span class="font-semibold leading-tight">{caseStudy.tabTitle}</span>
            </button>
          ))}
        </div>

        <!-- Content Area (right side) -->
        <div class="flex-1 ml-0 lg:ml-8 mt-8 lg:mt-0">
          {caseStudies.map((caseStudy, index) => (
            <div
              class={`case-study-content ${index === 0 ? 'block' : 'hidden'}`}
              data-case-study={caseStudy.id}
            >
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
                <div class="space-y-6">
                  <div class="flex items-start justify-between">
                    <div>
                      <h2 class="text-3xl font-light mb-2">{caseStudy.caseStudyTitle}</h2>
                    </div>
                  </div>

                  <div class="bg-gray-50 rounded-lg p-6 border border-gray-100">
                    <div class="space-y-4" set:html={caseStudy.html}></div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>

  <Footer />

  <script>
    // Tab switching functionality
    document.addEventListener('DOMContentLoaded', function() {
      const tabs = document.querySelectorAll('.case-study-tab');
      const contents = document.querySelectorAll('.case-study-content');

      tabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const caseStudyId = this.getAttribute('data-case-study');
          
          // Update tab styles
          tabs.forEach(t => {
            t.classList.remove('bg-gray-800', 'text-white');
            t.classList.add('bg-white', 'text-gray-700');
          });
          this.classList.remove('bg-white', 'text-gray-700');
          this.classList.add('bg-gray-800', 'text-white');
          
          // Show/hide content
          contents.forEach(content => {
            content.classList.add('hidden');
            if (content.getAttribute('data-case-study') === caseStudyId) {
              content.classList.remove('hidden');
            }
          });
          
          // Scroll to top of the main container
          const mainContainer = document.querySelector('.max-w-7xl');
          if (mainContainer) {
            mainContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    });
  </script>
</Layout> 