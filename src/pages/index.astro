---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import IntroSection from '../components/IntroSection.astro';
import CapabilitiesSection from '../components/CapabilitiesSection.astro';
import CaseStudySection from '../components/CaseStudySection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import ClientsSection from '../components/ClientsSection.astro';
import CertificationsSection from '../components/CertificationsSection.astro';
import ContactSection from '../components/ContactSection.astro';
---

<Layout title="WTI Solutions - Everything Data®">
	<Header transparent={true} />

	<!-- 1. HOME HERO -->
	<Hero 
		backgroundVideo="/src/assets/video/satellite-horizon-video.mp4"
		backgroundColor="var(--charcoal-50)" 
	/>

	<!-- 2. INTRO TEXT -->
	<IntroSection />

	<!-- 3. CAPABILITIES -->
	<CapabilitiesSection />

	<!-- 4. CASE STUDY 1 - Image Left -->
	<CaseStudySection
		title="AI and Predictive Analytics"
		subtitle="Advanced AI and Machine Learning Solutions"
		description="WTI designed and deployed Advanced AI and Machine Learning Solutions — including the development of custom Large Language Models (LLMs) — to extract actionable insights, automate workflows, and solve complex operational challenges."
		backgroundImage="/src/assets/ai-images/1000_F_617328247_ERluHDRwhHfeSaVEyie79AB1zmXnq74Y.jpg",
		imageLeft={true}
		gradientColor='black'
	/>

	<!-- 5. SERVICES -->
	<ServicesSection />

	<!-- 6. What Our Clients Are Saying -->
	<TestimonialsSection />

	<!-- 7. CASE STUDY 2 - Image Right -->
	<CaseStudySection
		title="Ontology and Knowledge Modeling",
		subtitle="Semantic Data Integration and Analysis",
		description="By fusing knowledge modeling with ontology-enabled integration, WTI provided a scalable foundation for AI systems to operate in full context — accelerating the transition from raw data to decisive action and reducing operational risk across mission areas.",
		backgroundImage="/src/assets/ai-images/1000_F_381437487_AhNBfuWAwHnuvjNRyNXwNlS47FS2rQ1s.jpg",
		imageLeft={false},
		gradientColor='black'
	/>

	<!-- 8. Sampling of Our Clients -->
	<ClientsSection />

	<!-- 9. Certifications -->
	<CertificationsSection />

	<!-- 10. CASE STUDY 3 - Image Left -->
	<CaseStudySection
		title="IT and Data Modernization"
		subtitle="Modernizing the Defense and National Security Sector"
		description="WTI developed an innovative framework utilizing Business Process Modeling, Model-Based Systems Engineering (MBSE), and ontology development to modernize and transform processes, systems, and data through a holistic approach. Combining these disciplines unlocks new insights into the complex relationships between domains and paves the way for advanced AI and automation."
		backgroundImage="src/assets/ai-images/kg-images/1000_F_1095570403_4esLVgFleSzkezORNrGsEKlCMKz1tO8l.jpg",
		imageLeft={true}
		bgColor="bg-gray-50"
	/>

	<!-- 11. CONTACT FORM & FOOTER -->
	<ContactSection />
</Layout>
